#include "shell.h"

/**
 * interactive - if interactive mode is working return true
 * @info: address of structure
 * @c: checks the character
 * @delim: the string delimeter
 * is_delim: check whether the character is delimeter or not
 * Return: if shell is interactive mode return 1, otherwise 0
 * _isalpha - alphabetic character checked
 * @c: the input character
 *_atoi - integer converted into string
 * @s: the string to be converted
 * Return: 0 if no numbers in string, converted number otherwise
 */
int interactive(info_t *info)
{
        return (isatty(STDIN_FILENO) && info->readfd <= 2);
}
int is_delim(char *delim, char c)
{
        while (*delim)
                if (*delim++ == c)
                        return (1);
		else
        		return (0)
}
int _isalpha(int c)
{
        if ((c >= 'A' && c <= 'Z') || (c >= 'a' && c <= 'z'))
                return (1);
        else
                return (0);
int _atoi(char *s)
{
        int i, sign = 1, flag = 0, output;
        unsigned int result = 0;
	for (i = 0;  s[i] != '\0' && flag != 2; i++)
	{
		if (s[i] == '-')
			sign *= -1;

		if (s[i] >= '0' && s[i] <= '9')
		{
			flag = 1;
			result *= 10;
			result += (s[i] - '0');
		}
		else if (flag == 1)
			flag = 2;
	}

	if (sign == -1)
		output = -result;
	else
		output = result;

	return (output);
}
